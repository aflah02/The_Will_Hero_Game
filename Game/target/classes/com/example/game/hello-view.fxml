<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-image: url('./images/cloud2.jpeg')" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.HelloController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" onMouseClicked="#Screen_Click" pickOnBounds="true">
         <image>
            <Image url="@images/cloud2.jpeg" />
         </image>
      </ImageView>
      <Label fx:id="welcomeText" layoutX="14.0" layoutY="170.0" prefHeight="18.0" prefWidth="573.0" />
      <Button fx:id="start" layoutX="14.0" layoutY="254.0" mnemonicParsing="false" onAction="#start_game" prefHeight="75.0" prefWidth="117.0" text="Start">
         <font>
            <Font name="Calibri Italic" size="18.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button fx:id="load" layoutX="236.0" layoutY="254.0" mnemonicParsing="false" onAction="#Load_states" prefHeight="75.0" prefWidth="130.0" text="Load State">
         <font>
            <Font name="Calibri Bold Italic" size="18.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button fx:id="exit" layoutX="480.0" layoutY="254.0" mnemonicParsing="false" onAction="#Exit" prefHeight="75.0" prefWidth="107.0" text="Exit">
         <font>
            <Font name="Calibri Italic" size="18.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
